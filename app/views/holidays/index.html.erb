
<div class="row">
<h1>Listing holidays</h1>
<div class="pull-right range-query">
  
  <%= form_tag form_tag holidays_path, method: :get do %>
    <%= text_field_tag 'search[dateTo_from]', @search.dateTo_from %>
    <%= text_field_tag 'search[dateFrom_to]', @search.dateFrom_to %>
    <%= submit_tag 'search', class: 'btn_search-button' %>
  <% end %>  
  </div>
  </div>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
      <th>Dateto</th>
      <th>Datefrom</th>
      <th>Department</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.dateTo %></td>
        <td><%= holiday.dateFrom %></td>
        <td><%= holiday.Department %></td>
        <td><%= holiday.Employee %></td>
        <td><%= link_to 'Show', holiday, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_holiday_path(holiday), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', holiday, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>

<br>

<%= link_to 'New Holiday', new_holiday_path %>
